<Window x:Class="LinkBlync.Host.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LinkBlync.Host"
        mc:Ignorable="d"
        Title="LinkBlync.Host" Height="200" Width="200" MinHeight="200" MinWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" x:Name="CurrentColorRect" Background="Green"
                BorderBrush="Gray" BorderThickness="1" Margin="12" />


        <Button Grid.Row="1" Content="Test #FFFFFF" Click="ResetButtonOnClick" />
        <TextBlock Grid.Row="2" Margin="4" x:Name="StatusLabel" TextWrapping="WrapWithOverflow" />
    </Grid>
</Window>
